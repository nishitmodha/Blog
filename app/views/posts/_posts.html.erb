<div class="section">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="card">
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <p class="title is-4"><%= link_to post.title, post  %></p>
              <strong>By: </strong> <%= post.user_id %>
            </div>
          </div>
          <div class="content">
            <%= post.content %>
          </div>

          <div class="comment">
           <strong> <%= post.comments.count %> </strong> Comments
            <%= render post.comments %>
          </div>
        </div>
      </div>
      <br>
    <% end %>
  </div>
</div>